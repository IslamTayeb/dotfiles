# change window focus within space
ctrl + cmd - down : yabai -m window --focus south || yabai -m window --focus first
ctrl + cmd - up : yabai -m window --focus north || yabai -m window --focus first
ctrl + cmd - left : yabai -m window --focus west || yabai -m window --focus first 
ctrl + cmd - right : yabai -m window --focus east || yabai -m window --focus first

# change focus between external displays (left and right)
ctrl + cmd - left : yabai -m display --focus west
ctrl + cmd - right : yabai -m display --focus east

# reorder spaces (move space to different index position)
cmd + shift + ctrl - left : index="$(yabai -m query --spaces --space | jq '.index')" && \
                          target="$(($index - 1))" && \
                          if [[ $target -ge 1 ]]; then \
                            yabai -m space --move $target; \
                          fi

cmd + shift + ctrl - right : index="$(yabai -m query --spaces --space | jq '.index')" && \
                           count="$(yabai -m query --spaces | jq length)" && \
                           target="$(($index + 1))" && \
                           if [[ $target -le $count ]]; then \
                             yabai -m space --move $target; \
                           fi

# move window to display left and right
#shift + ctrl - left : yabai -m window --display west; yabai -m display --focus west;
#shift + ctrl - right : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
#ctrl + shift - left : yabai -m window --space prev;
#ctrl + shift - right : yabai -m window --space next;

# move window to space #
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
ctrl + shift - 9 : yabai -m window --space 9;

# focus on spaces
ctrl - 1 : yabai -m space --focus 1;
ctrl - 2 : yabai -m space --focus 2;
ctrl - 3 : yabai -m space --focus 3;
ctrl - 4 : yabai -m space --focus 4;
ctrl - 5 : yabai -m space --focus 5;
ctrl - 6 : yabai -m space --focus 6;
ctrl - 7 : yabai -m space --focus 7;
ctrl - 8 : yabai -m space --focus 8;
ctrl - 9 : yabai -m space --focus 9;

# resize windows with ctrl + and ctrl - (increased to 40px)
ctrl - 0x18 : yabai -m window --resize left:-40:0; yabai -m window --resize right:-40:0  # ctrl+plus (increase width)
ctrl - 0x1B : yabai -m window --resize left:40:0; yabai -m window --resize right:40:0    # ctrl+minus (decrease width)
ctrl + shift - 0x18 : yabai -m window --resize bottom:0:-40; yabai -m window --resize top:0:-40  # ctrl+shift+plus (increase height)
ctrl + shift - 0x1B : yabai -m window --resize bottom:0:40; yabai -m window --resize top:0:40    # ctrl+shift+minus (decrease height)

# move space to different monitor
alt + shift + cmd + ctrl - left : yabai -m space --display west
alt + shift + cmd + ctrl - right : yabai -m space --display east

# rotate layout clockwise
alt + ctrl - q : yabai -m space --rotate 270

# flip along y-axis
alt + ctrl - w : yabai -m space --mirror y-axis

# flip along x-axis
alt + ctrl - e : yabai -m space --mirror x-axis

# toggle window float
shift + alt + ctrl - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
alt + ctrl - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area) + toggle fullscreen off
ctrl - d : yabai -m query --windows --space | jq -re '.[] | select(.["zoom-fullscreen"] == true) | .id' | xargs -I {} yabai -m window {} --toggle zoom-fullscreen; yabai -m space --balance

# swap windows
ctrl + alt - down : yabai -m window --swap south
ctrl + alt - up : yabai -m window --swap north
ctrl + alt - left : yabai -m window --swap west
ctrl + alt - right : yabai -m window --swap east

ctrl + alt + shift - down : yabai -m window --warp south
ctrl + alt + shift - up : yabai -m window --warp north
ctrl + alt + shift - left : yabai -m window --warp west
ctrl + alt + shift - right : yabai -m window --warp east


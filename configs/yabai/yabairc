# for this to work you must configure sudo such that
# it will be able to run the command without password
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# ===== Your existing configuration =====
yabai -m config layout bsp
yabai -m config window_placement second_child
yabai -m config top_padding 15
yabai -m config bottom_padding 15
yabai -m config left_padding 15
yabai -m config right_padding 15
yabai -m config window_gap 15
# center mouse on window with focus
yabai -m config mouse_follows_focus on
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize
# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^FaceTime$" manage=off
yabai -m rule --add app="^Screen Studio$" manage=off
yabai -m rule --add app="^Raycast$" manage=off

# ===== Space setup =====
# Create 9 spaces if they don't exist already
for i in $(seq 1 8)
do
    space_count=$(yabai -m query --spaces | jq length)
    if [ "$i" -gt "$space_count" ]; then
        yabai -m space --create
    fi
done

# ===== Application rules =====
# Helium Browser to Space 1
yabai -m rule --add app="^Helium$" space=1
# Cursor
yabai -m rule --add app="^Cursor$" space=1
# Messages to Space 2
yabai -m rule --add app="^Messages$" space=2
# Spotify
yabai -m rule --add app="^Spotify$" space=3
# Calendar to Space 9 (left half)
yabai -m rule --add app="^Calendar$" space=8
# Mail to Space 9 (top right position)
yabai -m rule --add app="^Mail$" space=8
# Godspeed
yabai -m rule --add app="^Godspeed$" space=7
# Slack
yabai -m rule --add app="^Slack$" space=8


# ===== Launch script =====
# This function will launch an app if it's not already running
launch_app() {
    if ! pgrep -x "$1" > /dev/null; then
        open -a "$1"
    fi
}

sleep 2

# Launch applications
launch_app "Helium"
launch_app "Mail"
launch_app "Godspeed"
launch_app "Calendar"
launch_app "Messages"
launch_app "Slack"
launch_app "Spotify"

# Focus on space 1 where Helium is located
yabai -m space --focus 1

